    <rules>
        <fullName>CL Adjustment%3A Notify User CL Change Was Rejected - Restore Original CL</fullName>
        <actions>
            <name>Notify_user_to_restore_original_CL</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Credit_Line_Adjustment__c.CL_Change_Status__c</field>
            <operation>equals</operation>
            <value>Review Completed</value>
        </criteriaItems>
        <criteriaItems>
            <field>Credit_Line_Adjustment__c.CL_Change_Rejection_Status__c</field>
            <operation>equals</operation>
            <value>Rejected - Return to Original</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>CL Adjustment%3A Notify User to update CL to specified value</fullName>
        <actions>
            <name>Notify_user_to_set_an_updated_CL_amount</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Credit_Line_Adjustment__c.CL_Change_Status__c</field>
            <operation>equals</operation>
            <value>Review Completed</value>
        </criteriaItems>
        <criteriaItems>
            <field>Credit_Line_Adjustment__c.CL_Change_Rejection_Status__c</field>
            <operation>equals</operation>
            <value>Rejected - Adjust to New Amount</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>CL Adjustment%3A Send Email to Change User Requesting Justification</fullName>
        <actions>
            <name>Request_Justification_on_Unauthorized_Change</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Credit_Line_Adjustment__c.CL_Change_Status__c</field>
            <operation>equals</operation>
            <value>Justification Needed</value>
        </criteriaItems>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>CL Adjustment%3A Set Review Completed Date</fullName>
        <actions>
            <name>Set_Review_Completed_Timestamp</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Credit_Line_Adjustment__c.CL_Change_Status__c</field>
            <operation>equals</operation>
            <value>Review Completed</value>
        </criteriaItems>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
