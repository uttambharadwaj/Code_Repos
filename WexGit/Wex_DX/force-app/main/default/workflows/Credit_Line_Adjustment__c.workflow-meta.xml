    <alerts>
        <fullName>Notify_user_to_restore_original_CL</fullName>
        <description>Notify user to restore original CL</description>
        <protected>false</protected>
        <recipients>
            <recipient>mathis.farnsworth@wexinc.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <field>Change_User__c</field>
            <type>userLookup</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>WEX_Bank/Credit_Line_Adjustment_Review_Rejected_Return_To_Original</template>
    </alerts>
    <alerts>
