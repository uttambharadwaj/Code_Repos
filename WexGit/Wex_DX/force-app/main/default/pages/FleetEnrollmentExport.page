<apex:page standardController="FleetEnrollment__c" recordSetVar="fleetEnrollments" extensions="FleetEnrollmentExportController" showHeader="true" sidebar="true">
    <apex:outputPanel id="quoteBlock">
        <div class="bPageTitle">
            <div class="ptBody">
                <div class="content">
                    <img src="/img/icon/invoices32.png" alt="" class="pageTitleIcon" title=""/>
                    <h1 style="margin: 0 0 0 0;" class="pageType">Fleet Enrollment<span  class="titleSeparatingColon">:</span></h1>
                    <h2 style="margin: 0 0 0 0;" class="pageDescription">Export Enrollments</h2>
                    <div class="blank">&nbsp;</div>
                </div>
            </div>
        </div>
        <apex:form >
            <p>
                <b>Number of enrollments available for export:</b> {!fleetEnrollmentsToDownload}
            </p>
			<apex:commandButton action="{!downloadAttachments}" value="Download Enrollments" rendered="{!fleetEnrollmentsToDownloadInt != 0}"/>
        </apex:form><br/>
    </apex:outputPanel>
</apex:page>