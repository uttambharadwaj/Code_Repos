<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Total_Exposure_Limit_USD__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>EMAP_Update_Approval_Status_1st</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>amy.leung@wexaustralia.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>viann.leung@wexaustralia.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>wendy.fong@wexinc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Credit_Assessment__c.Approval_Status__c</field>
                <operation>equals</operation>
                <value>Pending Approval</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>EMAP_Update_Approval_Status_2nd</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>EMAP_Update_Final_Judgement</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>audrey.lu@wexaustralia.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>keith.duong@wexinc.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>martin.cooper@wexaustralia.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>wallis.tong@wexaustralia.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>1 AND (2 OR 3)</booleanFilter>
            <criteriaItems>
                <field>Credit_Assessment__c.Total_Exposure_Limit_USD__c</field>
                <operation>lessOrEqual</operation>
                <value>50000</value>
            </criteriaItems>
            <criteriaItems>
                <field>Credit_Assessment__c.Approval_Status__c</field>
                <operation>equals</operation>
                <value>Approval 1st</value>
            </criteriaItems>
            <criteriaItems>
                <field>Credit_Assessment__c.Approval_Status__c</field>
                <operation>equals</operation>
                <value>Pending Approval</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Pre-TEAS &lt;= 50k</label>
        <name>Total_Exposure_Limit_LessThan_25</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>EMAP_Update_Approval_Status_3rd</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>EMAP_Update_Final_Judgement</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>audrey.lu@wexaustralia.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>wallis.tong@wexaustralia.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Credit_Assessment__c.Total_Exposure_Limit_USD__c</field>
                <operation>greaterThan</operation>
                <value>50001</value>
            </criteriaItems>
            <criteriaItems>
                <field>Credit_Assessment__c.Total_Exposure_Limit_USD__c</field>
                <operation>lessOrEqual</operation>
                <value>500000</value>
            </criteriaItems>
            <criteriaItems>
                <field>Credit_Assessment__c.Approval_Status__c</field>
                <operation>equals</operation>
                <value>Approval 2nd,Approval 1st</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Pre-TEAS &gt; 50k &lt;= 500k</label>
        <name>Total_Exposure_Limit_GreaterThan_25K</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>EMAP_Update_Approval_Status_4th</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>EMAP_Update_Final_Judgement</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>keith.duong@wexinc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Credit_Assessment__c.Total_Exposure_Limit_USD__c</field>
                <operation>greaterThan</operation>
                <value>500001</value>
            </criteriaItems>
            <criteriaItems>
                <field>Credit_Assessment__c.Approval_Status__c</field>
                <operation>equals</operation>
                <value>Pending Approval,Approval 1st,Approval 2nd,Approval 3rd</value>
            </criteriaItems>
            <criteriaItems>
                <field>Credit_Assessment__c.Final_Judgement__c</field>
                <operation>notEqual</operation>
                <value>Approved</value>
            </criteriaItems>
        </entryCriteria>
        <label>Pre-TEAS &gt; 500k</label>
        <name>Total_Exposure_Limit_GreaterThank_50K</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>All_Emails/EMAP_Credit_Assessment_Approval_Initiated</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>User.Profile</field>
            <operation>equals</operation>
            <value>AU Credit User,AU EMAP Credit User</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>EMAP_Notify_Credit_Team_Leader_Credit_Assessment_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>EMAP_Notify_Owner_Credit_Assessment_Approved</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>EMAP_Notify_owner_Credit_Assessment_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>EMAP_Update_Approval_Status_Rejection</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>EMAP_Update_FinalJudgement_Rejection</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>EMAP_Update_FinalJudgemnt_RejectReason</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>EMAP Credit Assessment Approval Process</label>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
