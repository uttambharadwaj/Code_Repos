<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Owner</field>
        <field>Name</field>
        <field>zqu__Number__c</field>
        <field>Approval_Reason__c</field>
        <field>Internal_Sales_Comments__c</field>
        <field>Vendor__c</field>
        <field>Vendor_Order_Instructions__c</field>
        <field>zqu__Terms__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Send_email_to_quoter</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>kristine.martinez@wexinc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Free Form Fields Updated</label>
        <name>Free_Form_Fields_Updated</name>
        <rejectionActions>
            <action>
                <name>Send_email_to_quoter_rejection</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>All_Emails/Email_Template_for_Quote_Approvals</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>OR(AND(NOT(ISNULL(Internal_Sales_Comments__c)),NOT(ISBLANK(Internal_Sales_Comments__c))),AND(NOT(ISNULL(zqu__Terms__c)),NOT(ISBLANK(zqu__Terms__c))),AND(NOT(ISNULL(Vendor_Order_Instructions__c)),NOT(ISBLANK(Vendor_Order_Instructions__c))))</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>UpdateRecordtype</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Z_QuoteIsApproved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Send_email_to_quoter_rejection</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_Stage_to_Draft</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approval_Reason_Free_Form_Fields</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Free Form Fields Approval</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>approver__c</userHierarchyField>
    </nextAutomatedApprover>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
