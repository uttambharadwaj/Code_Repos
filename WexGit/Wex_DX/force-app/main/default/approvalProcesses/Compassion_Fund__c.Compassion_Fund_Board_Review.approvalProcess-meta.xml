<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>melissa.dudley@wexinc.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Date_of_Event__c</field>
        <field>Qualifying_Event_Type__c</field>
        <field>Reason_for_Request__c</field>
        <field>Grant_Range__c</field>
        <field>Purpose_of_Funds__c</field>
        <field>Fund_Manager_Comments__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Compassion_Fund_Individual_Approval</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>anant.patel@wexinc.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>dylan.jones@wexinc.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>gabriel.weiss@wexinc.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>hilary.rapkin@wexinc.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>jodi-ann.johnson@wexinc.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>lynn.alexander@wexinc.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>matt.wirth@wexinc.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>rick.rose@wexaustralia.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>sherry.olson@wexinc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <description>Board Review approval</description>
        <label>Board Review</label>
        <name>Board_Review</name>
        <rejectionActions>
            <action>
                <name>Compassion_Fund_Individual_Rejection</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>Compassion_Fund_Community/Compassion_Fund_Awaiting_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Compassion_Fund__c.Request_Status__c</field>
            <operation>equals</operation>
            <value>Manager Review</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Compassion_Fund_Approval_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Compassion_Fund_Final_Approval</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Compassion_Fund_Approval_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Compassion_Fund_Final_Rejection</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Compassion_Fund_Approval_Board_Review</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Compassion Fund Board Review</label>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
