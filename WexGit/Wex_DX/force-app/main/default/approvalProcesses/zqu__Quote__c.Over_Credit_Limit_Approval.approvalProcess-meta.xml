<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Approval_Reason__c</field>
        <field>PrimaryAccountName__c</field>
        <field>PrimaryAccountNumber__c</field>
        <field>PrimaryCreditLimit__c</field>
        <field>Quote_Total_Applicable_One_Time_Expense__c</field>
        <field>Quote_Total_Recurring_Monthly_Expense__c</field>
        <field>Quote_Total_Shipping_Handling__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Quote_Approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Record_Type_Updated</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>kristine.martinez@wexinc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Over Credit Limit</label>
        <name>Over_Credit_Limit</name>
    </approvalStep>
    <emailTemplate>All_Emails/Email_Template_for_Quote_Approvals</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>Value(PrimaryCreditLimit__c)  &lt; ( Quote_Total_Applicable_One_Time_Expense__c  +  Quote_Total_Recurring_Monthly_Expense__c  +  Quote_Total_Shipping_Handling__c )</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>UpdateRecordtype</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Z_QuoteIsApproved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approval_Reason_Over_the_Credit_Limit</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Over Credit Limit Approval</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
