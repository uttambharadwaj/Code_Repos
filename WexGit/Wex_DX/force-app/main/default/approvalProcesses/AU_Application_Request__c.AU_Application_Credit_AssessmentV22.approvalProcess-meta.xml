<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Owner</field>
        <field>Name</field>
        <field>Opportunity__c</field>
        <field>Account__c</field>
        <field>Credit_Limit__c</field>
        <field>Approval_Notes__c</field>
        <field>Notes_to_Credit__c</field>
        <field>Application_Status__c</field>
        <field>Approval_Status__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Populate_assessor_field</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Owner</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>AU Application Owner must provide their approval recommendation.</description>
        <label>Owner Assessment</label>
        <name>Owner_Assessment</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>AU_Approval_Status_Approved_1st</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_1st_level_approver</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>AU_Applications_1st_Level_Approver</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>All apps must be approved by either AU Credit Team Leader, AU Head of Risk Asia Pacific or AU CFO.</description>
        <label>1st Level Approver</label>
        <name>X1st_Level_Approver</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Populate_2nd_lvl_approver</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>AU_Apps_AU_CFO</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>If credit limit requested is greater than AUD 400K then route to AU CFO</description>
        <entryCriteria>
            <criteriaItems>
                <field>AU_Application_Request__c.Credit_Limit__c</field>
                <operation>greaterThan</operation>
                <value>&quot;AUD 400,000&quot;</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>2nd Level: &gt;$400K</label>
        <name>X2nd_Level_400K</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Populate_2nd_lvl_approver</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>AU_Applications_Head_of_Risk_CFO</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>If requested credit limit is over AUD $200k then route to AU Head of Risk Asia Pacific</description>
        <entryCriteria>
            <criteriaItems>
                <field>AU_Application_Request__c.Credit_Limit__c</field>
                <operation>greaterThan</operation>
                <value>&quot;AUD 200,000&quot;</value>
            </criteriaItems>
            <criteriaItems>
                <field>AU_Application_Request__c.Credit_Limit__c</field>
                <operation>lessOrEqual</operation>
                <value>&quot;AUD 400,000&quot;</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>2nd Level: $200k - $399K</label>
        <name>X2nd_Level_200k_399K</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Populate_2nd_lvl_approver</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>AU_Applications_2nd_Level_Approver</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>If credit limit is less than $200K but greater than $50K: Route to Credit Team leader or higher authority</description>
        <entryCriteria>
            <criteriaItems>
                <field>AU_Application_Request__c.Credit_Limit__c</field>
                <operation>greaterThan</operation>
                <value>&quot;AUD 50,000&quot;</value>
            </criteriaItems>
            <criteriaItems>
                <field>AU_Application_Request__c.Credit_Limit__c</field>
                <operation>lessOrEqual</operation>
                <value>&quot;AUD 200,000&quot;</value>
            </criteriaItems>
        </entryCriteria>
        <label>2nd Level: $50K - $199K</label>
        <name>X2nd_Level_50K_199K</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Used by AU business for credit approval</description>
    <emailTemplate>AU_Email_Templates/AU_Application_Credit_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>User.Profile</field>
            <operation>equals</operation>
            <value>AU Credit User</value>
        </criteriaItems>
        <criteriaItems>
            <field>AU_Application_Request__c.Application_Status__c</field>
            <operation>notEqual</operation>
            <value>Approved,Pending Approval</value>
        </criteriaItems>
        <criteriaItems>
            <field>AU_Application_Request__c.Owner</field>
            <operation>notEqual</operation>
            <value>AU Credit Queue</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>AU_Application_Final_Status_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>AU_Application_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>AU_Approval_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>AU_Application_Final_Status_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>AU_Application_Status_Declined_Initial</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>AU_Approval_Status_Declined</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>AU_Application_Status_Pending_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>AU_Approval_Status_Pending_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>AU Application Credit Assessment V2.2</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <recallActions>
        <action>
            <name>Application_Status_to_Sales_Credit_Revie</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Approval_Status_to_null</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
