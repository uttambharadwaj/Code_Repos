<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Birth_Date</fullName>
    <active>true</active>
    <errorConditionFormula>(
(YEAR(TODAY()) - YEAR(AO_Date_of_Birth__c)) &lt; 18)
|| 
(((YEAR(TODAY()) - YEAR(AO_Date_of_Birth__c)) = 18)
&amp;&amp; 
((MONTH(TODAY()) &lt; MONTH(AO_Date_of_Birth__c)))
)</errorConditionFormula>
    <errorDisplayField>AO_Date_of_Birth__c</errorDisplayField>
    <errorMessage>You must be at least 18 years old to apply for a fleet card</errorMessage>
</ValidationRule>
