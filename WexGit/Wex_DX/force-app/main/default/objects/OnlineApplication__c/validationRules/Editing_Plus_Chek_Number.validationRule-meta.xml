<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Editing_Plus_Chek_Number</fullName>
    <active>true</active>
    <errorConditionFormula>AND( 
ISCHANGED( PlusChek__c ), 
NOT(ISPICKVAL(Status__c ,&quot;Pending Setup&quot;)))</errorConditionFormula>
    <errorDisplayField>PlusChek__c</errorDisplayField>
    <errorMessage>Plus Chek can ONLY be edited with a status of Pending Setup</errorMessage>
</ValidationRule>
