<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Tax_Id_Format</fullName>
    <active>true</active>
    <errorConditionFormula>LEN(Federal_Tax_ID__c) &gt; 0 &amp;&amp;
NOT(
REGEX(Federal_Tax_ID__c, &quot;[0-9]{3}-[0-9]{2}-[0-9]{4}&quot;) ||
REGEX(Federal_Tax_ID__c, &quot;[0-9]{2}-[0-9]{7}&quot;) ||
REGEX(Federal_Tax_ID__c, &quot;[0-9]{9}&quot;)
)</errorConditionFormula>
    <errorDisplayField>Federal_Tax_ID__c</errorDisplayField>
    <errorMessage>You must enter 9 digits, or a valid tax Id format, such as 12-3456789 or 123-45-6789.</errorMessage>
</ValidationRule>
