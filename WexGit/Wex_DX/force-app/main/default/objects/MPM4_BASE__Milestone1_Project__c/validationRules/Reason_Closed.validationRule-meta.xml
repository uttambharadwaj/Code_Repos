<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Reason_Closed</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
TEXT(Stage__c) = &apos;Closed&apos;,
ISBLANK(TEXT(Reason_Closed__c))
)</errorConditionFormula>
    <errorDisplayField>Reason_Closed__c</errorDisplayField>
    <errorMessage>Please select the reason why the project was closed</errorMessage>
</ValidationRule>
