<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Security_Code_Length</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(ISBLANK(Security_Code__c)) 
&amp;&amp;
(LEN(Security_Code__c) &lt; 4 || 
LEN(Security_Code__c) &gt; 10 ||
NOT(ISNUMBER(Security_Code__c)))</errorConditionFormula>
    <errorDisplayField>Security_Code__c</errorDisplayField>
    <errorMessage>Please enter a 4-10 digit security code.</errorMessage>
</ValidationRule>
