<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Zip_Code_length</fullName>
    <active>false</active>
    <description>Makes sure that Length of the zip code is 5 or 9 digits</description>
    <errorConditionFormula>(LEN(Zip_code__c ) &gt; 5 &amp;&amp; LEN(Zip_code__c ) &lt; 10) || (LEN(Billing_Zip_Code__c ) &gt; 5 &amp;&amp; LEN(Billing_Zip_Code__c ) &lt; 10) || (LEN(PG_Residential_Zip__c ) &gt; 5 &amp;&amp; LEN(PG_Residential_Zip__c ) &lt; 10)</errorConditionFormula>
    <errorDisplayField>Zip_code__c</errorDisplayField>
    <errorMessage>Must be valid Zip Code</errorMessage>
</ValidationRule>
