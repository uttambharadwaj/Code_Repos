<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validate_Phone_Numbers</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
$User.Alias &lt;&gt; &apos;guest&apos;,
OR( 
NOT(REGEX(Guarantor_Residential_Phone__c, &quot;[0-9]{3}-[0-9]{3}-[0-9]{4}&quot;)),
NOT(REGEX(Guarantor_Mobile_Phone__c, &quot;[0-9]{3}-[0-9]{3}-[0-9]{4}&quot;)),
NOT(REGEX(Business_Phone__c, &quot;[0-9]{3}-[0-9]{3}-[0-9]{4}&quot;))
)
)</errorConditionFormula>
    <errorMessage>Please enter a valid 10-digit phone number</errorMessage>
</ValidationRule>
