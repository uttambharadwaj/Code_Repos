<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CP_App_Request_vr_001</fullName>
    <active>true</active>
    <description>do not allow large request approval without site visit</description>
    <errorConditionFormula>AND( 
NOT($Setup.Automation_Settings__c.Disable_Validation_Rules__c),
$Permission.Upmarket_Stuffs,
Program__r.Use_Upmarket__c,
CONTAINS(TEXT(Credit_Decision__c), &apos;Approved&apos;),
Opportunity__r.Credit_Limit__c &gt; 100000, 
ISBLANK(Opportunity__r.Visit_Date__c) 
)</errorConditionFormula>
    <errorMessage>A site visit is required for this opportunity before approval.</errorMessage>
</ValidationRule>
