<apex:page sidebar="false" showChat="false" showHeader="false" standardStylesheets="false" cache="false" title="{!$Label.site.forgot_password_confirmation}" controller="PartnersCommForgotPasswordController">
	<apex:composition template="{!$Site.Template}">
		<apex:define name="body">
			<center>
				<apex:panelGrid bgcolor="white" columns="1">
					<br />
					<br />
					<apex:panelGrid width="{!Settings.Component_Width__c}" cellpadding="0" cellspacing="0" bgcolor="white" columns="1" styleClass="topPanelContainer">
						<br />
						<apex:outputPanel layout="block" styleClass="topPanel">
							<apex:panelGrid width="{!Settings.Component_Width__c}" cellpadding="0" cellspacing="0" bgcolor="white" columns="2">
								<apex:panelGroup >
									<br />
									<apex:outputText styleClass="title" value="{!$Label.site.temp_password_sent}" />
									<br />
									<br />
									<apex:outputLink value="{!$Page.PartnersCommLogin}" rendered="{!$Site.LoginEnabled}">{!$Label.site.go_to_login_page}</apex:outputLink>
									<br />
								</apex:panelGroup>
							</apex:panelGrid>
						</apex:outputPanel>
					</apex:panelGrid>
				</apex:panelGrid>
			</center>
			<br />
		</apex:define>
	</apex:composition>	
</apex:page>