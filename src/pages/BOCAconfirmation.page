        <body class="radial">
            
            <header class="page-header affix">
                <!-- Insert Include Here -->
                
                
                <!-- Begin :: Header -->
                <script type="text/javascript">
                if (typeof(lpUnit) == 'undefined')    var lpUnit = 'sales';
                if (typeof(lpLanguage) == 'undefined') var lpLanguage = 'english';
                </script>
                
                <script src="https://www.essofleetoffers.com/secure/mtagconfig.js" type="text/Javascript"></script>
                
                <div class="logoDiv" style="margin-top:1%;"></div>
                <apex:outputtext styleClass="logo" value="{!DisplayName}" escape="false"></apex:outputtext>
                
                <div class="ui-contact-details">
                    <p class="text-bold">{!call[0]}</p>
                    
                    <p class="text-light">{!call[1]}
                    <apex:outputText value="{!inSales}"/>
                        </p>
                    <p class="text-light">
                        <!-- BEGIN LivePerson Button Code -->
                            <apex:outputText value="{!liveperson}" escape="false"/>
                                <!-- END LivePerson Button code -->
                                    </p>
                                </div>
                                </header>
                                <apex:pageMessages id="msgs"/>
                                    <!-- End :: Header -->
                                        <div class="container" id="container">
                                            
                                            <div class="row">
                                                <!-- Begin :: Side Panel -->
                                                    <div id="col-1" class="col-xs-12 col-sm-6 col-lg-3">
                                                        <div class="sidebar-nav-fixed affix">
                                                            <!-- Branded Img here -->
                                                                <div id="branding"></div>
                                                                
                                                             
                                                                        </div>
                                                                                            
                                                                                            </div>
                                                                                            <!--end side panel--->
                                                                                                <div id="col-2" class="col-xs-12 col-sm-7 col-lg-7">
                                                                                                    
                                                                                                    
                                                                                                    
                                                                                                    <div class="panel panel-default">
                                                                                                        <div class="panel-heading gradient">
                                                                                                            <h2 class="panel-title">Confirmation</h2>
                                                                                                            </div>
                                                                                                            <div class="panel-body">
                                                                                                                <h3>
                                                                                                                Thank You For Your Application. </h3>
                                                                                                                <h4>Your Confirmation Number Is:</h4>
                                                                                                                
                                                                                                                    <apex:outputText value="{!oppNum}"/><br/>
                                                                                                                        <apex:outputText value="{!confirmation}" escape="false"/>
                                                                                                                        </div>
                                                                                                                    </div><!-----panel end--->
                                                                                                                    
                                                                                                                    
                                                                                                                    
                                                                                                                    
                                                                                                                    
                                                                                                                    </div>
                                                                                                                    </div>
                                                                                                                    
                                                                                                                    
                                                                                                                    </div>
                                                                                                                    <!---end container--->
                                                                                                                        <div id="footer">
                                                                                                                            <a href="//onlineservices.secure.force.com/creditapplication/creditApp_TermsAndConditions" title="terms of use"
                                                                                                                            target="_blank">
                                                                                                                                Terms of Use &amp; Privacy Policy <span class="glyphicon glyphicon-lock"></span></a>
                                                                                                                                    </div>
                                                                                                                                
                                                                                                                                
                                                                                                                                <apex:outputText value="{!googleAnalyticsBodyBlock}" id="bodyBlock" escape="false"/>
                                                                                                                                    </body>
                                                                                                                                </html>
                                                                                                                                </apex:page>