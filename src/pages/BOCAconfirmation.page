<apex:page showHeader="false" sidebar="false" standardStylesheets="false" docType="html-5.0" controller="BOCAController"
           action="{!initBrandCheck}" language="{!lang}" extensions="BOCALangExtension" name="{!BrandLongName}">
<html lang="{!lang}">

<head>
    <title>
        <apex:outputText value="{!brandlongName}"/>
    </title>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, user-scalable=no"/>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <apex:includeScript value="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"/>
    <apex:includeScript value="{!URLFOR($Resource.jqueryMask)}"/>
    <!-- Include all compiled plugins (below), or include individual files as needed -->

    <!----Bootstrap Files--->

    <apex:includeScript value="{!URLFOR($Resource.bootstrap, 'dist/js/bootstrap.min.js')}"></apex:includeScript>
    <link href="{!URLFOR($Resource.bootstrap, 'dist/css/bootstrap.min.css')}" rel="stylesheet"/>

    <!---end bootstrap--->
    <apex:stylesheet value="{!URLFOR($Resource.BOCAbase)}"/>
    <!--[if lt IE 9]>
    <apex:includeScript value="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"/>
    <apex:includeScript value="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"/>
    <link href="//netdna.bootstrapcdn.com/respond-proxy.html" id="respond-proxy" rel="respond-proxy">

    <apex:includeScript value="{!URLFOR($Resource.respond)}"/>
    <link href="{!URLFOR($Resource.proxy)}" id="respond-redirect" rel="respond-redirect">
    <![endif]-->
    <!---<apex:stylesheet value="{!URLFOR($Resource.boca, 'css/fieldvalidation.css')}"/>--->
    <!----<apex:stylesheet value="{!URLFOR($Resource.boca, 'css/print.css')}"/>---->

    <!---Branding Styles Loaded Dynamically here--->

    <!---End Branding Styles---->
    <style type="text/css">label {
        display: block;
        width: 100%;
        font-weight: 300;
    }

    .container {
        margin: 0px 0px 0px 0px;
        padding: 5% 0px 0px 0px;
    }

    body {
        font-family: Arial;
        background-color: transparent;
    }

    td, th {
        padding: 0%;
    }

    .btn-custom {
    {!brand2};
    }
    .logoDiv {
        background-image: url({!URLFOR($Action.Attachment.Download, logoURL)});
        background-repeat: no-repeat;
        margin-left: 2%;

    }
    #branding {
        background-image: url({!URLFOR($Action.Attachment.Download, cardURL)});
        background-repeat: no-repeat;
        width: fit-content;
        height: fit-content;
    }
    .sidebar{

      list-style-type: none;
      background-image: linear-gradient(to bottom, #e3dde3, #f5f5f5);
      padding: 0px 5px 10px 5px;
    }
   .sidebar-nav-fixed h1, .sidebar-nav-fixed h2{
        text-align: center;
        
            }
   .sidebar li{
        padding: 10px 0px 0px 10px;     
            
    }
   h1, h2, h3, h4 {
        font: bold Arial;
    }

    .panel-heading {
    {!brand1};
    }
    .panel-title {
        color: #fff;
    }

    .panel {
        border: none;
    }

    .row {
        margin: 0 auto;
    }

    input .form-control {
        padding: 0;
    }
        @media only screen and (max-width: 767px)
    {
        .logoDiv{
            float: none;
            margin: 0 auto;
            background-position: center; 
        }
        .pageHeader{
            padding-right:0px;
            padding-top:5%;
        }
        }
        @media only screen and (max-width: 768px) and (min-width: 200px){
            header.page-header.affix{
                min-height:150px;
                padding: 20px 0px 0px 0px;
        
            }
        }

    </style>


    <apex:outputText value="{!googleAnalyticsHeadBlock}" id="headBlock" escape="false"/>
</head>
            
    
