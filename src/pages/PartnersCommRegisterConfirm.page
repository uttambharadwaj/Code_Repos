<apex:page showHeader="false" standardStylesheets="false" title="{!$Label.site.registration_confirmation}" controller="PartnersCommRegisterController">
	<apex:composition template="{!$Site.Template}">
		<apex:define name="body">
			<center>
				<apex:panelGrid bgcolor="white" columns="1" style="align: center;">
					<br />
					<br />
					<apex:panelGrid width="{!Settings.Component_Width__c}" cellpadding="0" cellspacing="0" bgcolor="white" columns="1" style="topPanel">
						<br />
						<apex:outputPanel layout="block" styleClass="topPanelContainer">
							<apex:panelGrid width="{!Settings.Component_Width__c}" cellpadding="0" cellspacing="0" bgcolor="white" columns="2">
								<apex:panelGroup >
									<br />
									<apex:outputText styleClass="title" value="{!$Label.site.thank_you_for_registering}" />
									<br />
									<br />
									<apex:outputLink value="{!$Page.PartnersCommLogin}" rendered="{!$Site.LoginEnabled}">{!$Label.site.go_to_login_page}</apex:outputLink>
									<br />
								</apex:panelGroup>
							</apex:panelGrid>
						</apex:outputPanel>
					</apex:panelGrid>
				</apex:panelGrid>
			</center>
			<br />
		</apex:define>
	</apex:composition>		
</apex:page>