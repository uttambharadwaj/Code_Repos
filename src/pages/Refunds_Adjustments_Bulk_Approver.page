<apex:page standardController="Refund_Adjustment__c"
        recordSetVar="adjustments"
        extensions="SelectedSizeWorkaround"
        showHeader="false"
           docType="html-5.0"
        id="Refunds_Adjustments_Bulk_Approver">
    <apex:slds />
    <apex:form id="muform">
       <!-- <apex:pageMessage summary="Selected Collection Size: {!mySelectedSize}"
                severity="info"
                id="muras"
        />
        <apex:pageMessage summary="Record Set Size: {!myRecordsSize}"
                severity="info"
                id="murar"
        />-->
        <apex:pageBlock title="Refunds / Adjustments Mass-Update" mode="edit" id="mub1">
            <apex:pageMessages />
            <apex:pageBlockSection id="mus1">
               <!-- <apex:inputField value="{!Refund_Adjustment__c.Approval_Status__c}" id="approvalStatus" required="true">
                    <apex:actionSupport event="onchange" rerender="muselectedlist"/>
                </apex:inputField> -->
                <apex:selectList value="{!Refund_Adjustment__c.Approval_Status__c}" id="approvalStatus" size="1">
                    <apex:selectOptions value="{!approvalOptions}" />
                    <apex:actionSupport event="onchange" rerender="muselectedlist"/>
                </apex:selectList>
                <apex:inputField value="{!Refund_Adjustment__c.Approval_Comment__c}" id="approvalComment">
                    <apex:actionSupport event="onchange" rerender="muselectedlist"/>
                </apex:inputField>
                <!-- <apex:inputField value="{!Refund_Adjustment__c.Approver_Name__c}" rendered="true" id="approverName"/>
                <apex:inputField value="{!Refund_Adjustment__c.Decision_Date__c}" rendered="true" type="datetime" id="approvalDate"/> -->
            </apex:pageBlockSection>
            <apex:pageBlockButtons location="bottom" id="mubut">
                <apex:commandButton value="Save" action="{!updateRecords}" id="butsav"/>
                <apex:commandButton value="Cancel" action="{!cancel}" id="butcan"/>
            </apex:pageBlockButtons>
        </apex:pageBlock>
        <apex:pageBlock title="Selected Refunds/Adjustments" id="muselectedlist">
            <apex:pageBlockTable value="{!selected}" var="ref" id="mutab">
                <apex:column value="{!ref.Account_Number__c}" id="refAcctNbr"/>
                <apex:column value="{!ref.Name}" id="refName"/>
                <apex:column value="{!ref.Approval_Status__c}" id="refStatus"/>
                <apex:column value="{!ref.Approval_Comment__c}" id="refComment"/>
                <apex:column value="{!ref.Approver_Name__c}" id="refApprover"/>
                <apex:column value="{!ref.Decision_Date__c}" id="refApproveDate"/>
            </apex:pageBlockTable>
        </apex:pageBlock>
    </apex:form>
</apex:page>