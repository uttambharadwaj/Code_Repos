<apex:page standardController="OnlineApplicationOffer__c" extensions="OfferTemplateController"> 

    <apex:sectionHeader title="Web-to-Lead Email Template Selection" subtitle="Online Application Offer"/>
    <apex:pageMessages />    
    <apex:form >
        <apex:pageBlock >
        
            <apex:pageBlockButtons >            
                <apex:commandButton value="{!$Label.Save}"   action="{!doSave}"/>
                <apex:commandButton value="{!$Label.Cancel}" action="{!doCancel}" immediate="true"/>                
            </apex:pageBlockButtons>     
        
            <apex:pageBlockSection columns="1">                     
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="{!$Label.EmailTemplate}"/>
                    <apex:selectList value="{!OnlineApplicationOffer__c.Auto_Creation_Email_Template__c}" size="1">
                        <apex:selectOptions value="{!templates}"/>                            
                    </apex:selectList>                
                </apex:pageBlockSectionItem>                
            </apex:pageBlockSection>
        
        </apex:pageBlock>
    </apex:form>

</apex:page>