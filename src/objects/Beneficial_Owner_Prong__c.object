<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <validationRules>
        <fullName>Require_Country_Of_Issue</fullName>
        <active>true</active>
        <errorConditionFormula>AND( 
$User.Alias &lt;&gt; &apos;guest&apos;,
ISBLANK(TEXT(Country_Of_Issue__c)), 
NOT(ISBLANK(Passport_Number_Other_Government_ID__c))
)</errorConditionFormula>
        <errorDisplayField>Country_Of_Issue__c</errorDisplayField>
        <errorMessage>You must select a Country of Issue for a Passport or Other ID</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Require_SSN_Or_Other_ID</fullName>
        <active>true</active>
        <errorConditionFormula>AND( 
$User.Alias &lt;&gt; &apos;guest&apos;,
NOT(ISPICKVAL(Verification_Status__c, &apos;Saved&apos;)), 
LEN(Social_Security_Number__c) = 0, 
ISBLANK(Passport_Number_Other_Government_ID__c) 
)</errorConditionFormula>
        <errorMessage>A Social Security Number or  Passport #/Other Government ID # is required.</errorMessage>
    </validationRules>
</CustomObject>
