<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <validationRules>
        <fullName>EMAP_Bank_Garantee_Expiry_Date_Mandate</fullName>
        <active>true</active>
        <description>Security Expiry Date field is required, when Security Type as Bank Guarantee selected</description>
        <errorConditionFormula>AND(
 ISPICKVAL(Type__c, &apos;Bank Guarantee&apos;),
  ISBLANK(Security_Expiry__c) 
)</errorConditionFormula>
        <errorDisplayField>Security_Expiry__c</errorDisplayField>
        <errorMessage>Security expiry can not be blank, if security type is Bank Guarantee.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>EMAP_Bank_Garantee_Status_Mandate</fullName>
        <active>true</active>
        <description>Status field is required, when Security Type as Bank Guarantee selected</description>
        <errorConditionFormula>AND( 
ISPICKVAL( Type__c ,&apos;Bank Guarantee&apos;),
 ISPICKVAL( Status__c , &apos;&apos;) 
)</errorConditionFormula>
        <errorDisplayField>Status__c</errorDisplayField>
        <errorMessage>Status can not be blank, if security type is Bank Guarantee.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>EMAP_Negative_Security_Value</fullName>
        <active>true</active>
        <description>Security value must be positive if Security Type in (Bank Guarantee, Security Lodged Deposit) otherwise Security Value must be negative</description>
        <errorConditionFormula>AND(
 (Security_Value__c &gt; 0),
OR(
 ISPICKVAL( Type__c , &apos;Security Refund Deposit&apos;),
 ISPICKVAL( Type__c , &apos;Security Debt Transfer&apos;)
)
)</errorConditionFormula>
        <errorDisplayField>Security_Value__c</errorDisplayField>
        <errorMessage>Please correct security value. It should be negative amount. (e.g. - 100)</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>EMAP_Positive_Security_value</fullName>
        <active>true</active>
        <description>Security value must be positive if Security Type in (Bank Guarantee, Security Lodged Deposit) otherwise Security Value must be negative.</description>
        <errorConditionFormula>AND( 
(Security_Value__c &lt; 0), 
OR( 
ISPICKVAL( Type__c , &apos;Bank Guarantee&apos;), 
ISPICKVAL( Type__c , &apos;Security Lodged Deposit&apos;) 
) 
)</errorConditionFormula>
        <errorDisplayField>Security_Value__c</errorDisplayField>
        <errorMessage>Please correct security value. It should be positive amount. (e.g. +100)</errorMessage>
    </validationRules>
</CustomObject>
