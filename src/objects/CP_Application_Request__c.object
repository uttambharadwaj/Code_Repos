    <validationRules>
        <fullName>Adverse_Action_Required</fullName>
        <active>true</active>
        <errorConditionFormula>AND( 
ISNULL(Adverse_Action_Code__c), 
OR( 
ISPICKVAL(Credit_Decision__c, &quot;Declined&quot;), 
ISPICKVAL(Credit_Decision__c, &quot;Approved-Secured&quot;) &amp;&amp; Prepaid__c = TRUE))</errorConditionFormula>
        <errorMessage>An Adverse Action code is required</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Confirm_Checks_Before_Credit_Approved</fullName>
        <active>true</active>
        <description>Confirm Compliance (Sanctions Check + Compliance Decision) and Fraud (Decision + Recommendation) Checks pass before Credit Decision is Approved</description>
        <errorConditionFormula>AND(
  OR(
    NOT(ISPICKVAL(Sanctions_Check__c, &quot;Passed&quot;)),
    NOT(ISPICKVAL(Compliance_Decision__c, &quot;Approve&quot;)),
    NOT(ISPICKVAL(Fraud_Decision__c, &quot;Approved&quot;)),
    NOT(ISPICKVAL(Fraud_Recommendation__c, &quot;Recommend Approve&quot;))),
  CONTAINS(&quot;:Approved - Counter Offer:Approved - Requested:Approved - Secured Requested:&quot;, &apos;:&apos; + TEXT(Credit_Decision__c) + &apos;:&apos;))</errorConditionFormula>
        <errorDisplayField>Credit_Decision__c</errorDisplayField>
        <errorMessage>Compliance (Sanctions Check + Compliance Decision) and Fraud (Decision + Recommendation) Checks must be complete before Credit Decision is Approved</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Validate_Phone_Numbers</fullName>
        <active>false</active>
        <errorConditionFormula>AND(
$User.Alias &lt;&gt; &apos;guest&apos;,
OR( 
NOT(REGEX(Guarantor_Residential_Phone__c, &quot;[0-9]{3}-[0-9]{3}-[0-9]{4}&quot;)),
NOT(REGEX(Guarantor_Mobile_Phone__c, &quot;[0-9]{3}-[0-9]{3}-[0-9]{4}&quot;)),
NOT(REGEX(Business_Phone__c, &quot;[0-9]{3}-[0-9]{3}-[0-9]{4}&quot;))
)
)</errorConditionFormula>
        <errorMessage>Please enter a valid 10-digit phone number</errorMessage>
    </validationRules>
