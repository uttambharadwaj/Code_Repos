<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <validationRules>
        <fullName>Reason_Deadline_Revised</fullName>
        <active>false</active>
        <errorConditionFormula>AND(
  RecordType.DeveloperName = &apos;Implementation&apos;,
  ISCHANGED( MPM4_BASE__Deadline__c),
  NOT( ISBLANK( PRIORVALUE( MPM4_BASE__Deadline__c))),
  ISBLANK( Reason_Deadline_Revised__c)
)</errorConditionFormula>
        <errorDisplayField>Reason_Deadline_Revised__c</errorDisplayField>
        <errorMessage>Please record the reason why the deadline has been revised</errorMessage>
    </validationRules>
</CustomObject>
