<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <enableEnhancedLookup>false</enableEnhancedLookup>
    <validationRules>
        <fullName>Active_Card_Bonus</fullName>
        <active>true</active>
        <description>If Active Card Bonus is checked, amount is required</description>
        <errorConditionFormula>And( Offering_Active_Card_Bonus__c   = TRUE,
ISBLANK( AC_Requested_Amount__c ))</errorConditionFormula>
        <errorMessage>You must enter an Active Card Bonus Requested amount.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Signing_Incentive</fullName>
        <active>true</active>
        <description>If Signing Incentive is checked, require amount</description>
        <errorConditionFormula>And(Offering_Signing_Incentive__c  = TRUE,
ISBLANK(SI_Requested_Amount__c))</errorConditionFormula>
        <errorMessage>You must enter a Signing Incentive Requested Amount</errorMessage>
    </validationRules>
</CustomObject>
