<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <validationRules>
        <fullName>Campaign_Type</fullName>
        <active>true</active>
        <description>Ensure that the event is not linked to a parent campaign.</description>
        <errorConditionFormula>AND(

OR(
Event_Conference_Name__r.RecordType.Name = &apos;CorporatePay&apos;,
Event_Conference_Name__r.RecordType.Name = &apos;CorporatePay Marketing Events Master&apos;,
Event_Conference_Name__r.RecordType.Name = &apos;CorporatePay Parent&apos;),

NOT(TEXT(Event_Conference_Name__r.Type) = &apos;Parent&apos;),
NOT(TEXT(Event_Conference_Name__r.Type) = &apos;Trade Show&apos;)

)</errorConditionFormula>
        <errorDisplayField>Event_Conference_Name__c</errorDisplayField>
        <errorMessage>Please search for the parent campaign (it&apos;s name is the name of the event or partner only)</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Event_Conference_Name</fullName>
        <active>true</active>
        <description>Requires user to select name of event / conference, if this meeting type has been selected</description>
        <errorConditionFormula>AND(

RecordType.Id = &apos;012700000005wVs&apos;,
ISPICKVAL(Type,&quot;Events / Conferences&quot;),
ISBLANK( Event_Conference_Name__c )

)</errorConditionFormula>
        <errorDisplayField>Event_Conference_Name__c</errorDisplayField>
        <errorMessage>Please select the name of the event / conference.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Meeting_Location</fullName>
        <active>false</active>
        <errorConditionFormula>AND(OR( Text(Activity_Type__c )=&quot;Sales Meeting&quot;, Text(Activity_Type__c)=&quot;Service Meeting&quot;), Location =&quot;&quot;)</errorConditionFormula>
        <errorDisplayField>Location</errorDisplayField>
        <errorMessage>Please provide a location for this meeting.</errorMessage>
    </validationRules>
</CustomObject>
