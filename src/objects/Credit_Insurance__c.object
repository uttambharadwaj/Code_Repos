<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <validationRules>
        <fullName>SameCurrencyAsAccount</fullName>
        <active>false</active>
        <errorConditionFormula>TEXT(CurrencyIsoCode)  &lt;&gt;  TEXT(Account__r.CurrencyIsoCode)</errorConditionFormula>
        <errorMessage>Currency should match account record.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>WithdrawnReasonsMandatory</fullName>
        <active>true</active>
        <errorConditionFormula>AND(ISPICKVAL(Status__c,&apos;Withdrawn&apos;), ISBLANK( Withdrawn_Reasons__c ))</errorConditionFormula>
        <errorMessage>Withdrawn reasons are mandatory</errorMessage>
    </validationRules>
</CustomObject>
